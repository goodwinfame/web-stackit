{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@m/*": [
                "src/models/*"
            ],
            "@c/*": [
                "src/controllers/*"
            ],
            "@s/*": [
                "src/services/*"
            ],
            "@s": [
                "src/services"
            ],
            "@e": [
                "src/enums"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}